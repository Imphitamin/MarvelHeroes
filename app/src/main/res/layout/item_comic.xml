<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_Comic"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_comic_margin_small"
    card_view:cardBackgroundColor="@color/divider"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="@dimen/item_comic_margin_small"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_comic"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            fresco:backgroundImage="@android:color/white"
            fresco:actualImageScaleType="focusCrop"
            fresco:placeholderImage="@drawable/test_comic_2"
            fresco:placeholderImageScaleType="centerInside"
            />

        <TextView
            android:id="@+id/textView_ComicTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_comic"
            android:layout_marginLeft="@dimen/item_comic_margin_small"
            android:layout_marginStart="@dimen/item_comic_margin_small"
            android:layout_marginRight="@dimen/item_comic_margin_small"
            android:layout_marginEnd="@dimen/item_comic_margin_small"
            android:layout_marginTop="@dimen/item_comic_margin_small"
            android:singleLine="true"
            tools:text="Comic\'s title"
            android:textSize="@dimen/textSize_small"
            android:textColor="@color/text_primary_black"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textView_ComicIssue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ComicTitle"
            android:layout_marginLeft="@dimen/item_comic_margin_small"
            android:layout_marginStart="@dimen/item_comic_margin_small"
            android:layout_marginRight="@dimen/item_comic_margin_small"
            android:layout_marginEnd="@dimen/item_comic_margin_small"
            android:layout_marginTop="@dimen/item_comic_margin_small"
            android:singleLine="true"
            tools:text="Comic\'s issue \#13"
            android:textSize="@dimen/textSize_small"
            android:textColor="@color/text_secondary_black"
            />

        <TextView
            android:id="@+id/textView_ComicPages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView_ComicIssue"
            android:layout_marginLeft="@dimen/item_comic_margin_small"
            android:layout_marginStart="@dimen/item_comic_margin_small"
            android:layout_marginRight="@dimen/item_comic_margin_small"
            android:layout_marginEnd="@dimen/item_comic_margin_small"
            android:layout_marginTop="@dimen/item_comic_margin_small"
            android:layout_marginBottom="@dimen/item_comic_margin_avarage"
            android:singleLine="true"
            tools:text="Comic's number of Pages \#55"
            android:textSize="@dimen/textSize_small"
            android:textColor="@color/text_secondary_black"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>